<!DOCTYPE html>
<html lang="ko">
<!-- [MYS_AS_11_02_03_P2] 작성자: 누리어 시스템 김은경 -->
<head>
	@@include('@@webRoot/html/_include/app-head.html',{
		"title": "Wish House 플래너 | 자산"
	})
</head>

<body>
	@@include('@@webRoot/html/_include/app-a11y.html')
	<div class="app">
		<!-- app-header (for MyMoney) //-->
		@@include('@@webRoot/html/_include/app-header-close.html',{
			'pageTit' :'Wish House 플래너'
		}) 
		<!-- // app-header (for MyMoney) -->

		<!-- app-container //-->
		<div class="app-container">
					
			<!-- app-content // -->
			<main class="app-content my-asset wish-house-planer">

				
		<!-- 주소입력 // -->
		<section class="kb-sec full">
			<div class="top-area">
				<p class="msg">Wish House 매입을 위해 <br>약 <b><span class="num">5.9</span>억원</b>의 자금이 필요합니다.</p>
			</div>			
		</section>
		<section class="kb-sec planer">
			<div class="progress-wrap">
				<span class="animation"></span>
				<span class="total"></span><!-- 자산 + 준비자산 + wish gap + 대출 : 100% -->
				<span class="my-house" style="width:20%;"></span><!-- width : 자산비율 백분율표시 -->
				<span class="my-cash" style="left:20%;width:30%;"></span><!-- left : 자산비율백분율 , width : 준비자산비율 백분율표시 -->
				<span class="wish-house" style="left:70%;"></span>
				<!-- left : wish house 시세 백분율 -->
				<span class="my-loan" style="width:30%;"></span>
				<!-- width : 대출 백분율 -->

				<!-- 하단에 관련 스크립트 속도에 맞춰 실행해야 하니 setTimeOut 백분율에 맞춰서 속도 제어 해주세요. 2021-06-15 추가 -->

			</div>
			<div class="wish-house-price">
				<p class="tit">Wish House KB시세</p>
				<p class="price"><span class="num">14.9</span>억원</p>
			</div>
			<div class="my-money-list">
				<ul>
					<li class="mine">
						<p class="txt">My House 자산</p><!-- 2021-06-15 수정 -->
						<p class="amount"><span class="num">5.8</span>억원</p>
					</li>
					<li class="cash">
						<p class="txt">Wish House 준비자산</p><!-- 2021-06-15 수정 -->
						<p class="amount"><span class="num">5.6</span>억원</p>
					</li>
					<li class="loan">
						<p class="txt">My House 대출</p><!-- 2021-06-15 수정 -->
						<p class="amount"><span class="num">2.4</span>억원</p>
					</li>
				</ul>
			</div>
			<!-- 2021-06-15 수정 // -->
			<div class="smart-loan-banner">
				<button type="button" data-action="kbSmartLoan">
					<span class="tit">KB스마트 대출</span>
					<span class="s-txt">
						대출 가능금액을 확인할 수 있습니다.
					</span>
				</button>
			</div>
			<!-- // 2021-06-15 수정 -->
			<ul data-style="list">
				<li>세금 및 부대비용(중개보수, 취득세)이 발생할 수
					있습니다.</li>
			</ul>
		</section>
	
		<section class="kb-sec sticky-bottom">
			<!-- 자금필요 // -->
			<div class="btn-area">
				<button type="button" class="btn-solid_sticky lv2" data-action="close"><span>준비자산 수정하기</span></button>
				<button type="button" class="btn-solid_sticky" data-action="close"><span>목표설정 바로가기</span></button>
			</div>
			<!-- // 자금필요 -->
			<!-- 부동산준비자산 등록후 자산초과 // -->
			<!--
			<div class="btn-area">
				<button type="button" class="btn-solid_sticky lv2" data-action="close"><span>준비자산 수정하기</span></button>
				<button type="button" class="btn-solid_sticky" data-action="goLiiv"><span>리브부동산에서 매물보기</span></button>
			</div>
			-->
			<!-- // 부동산준비자산 등록후 자산초과 -->
			<!-- 부동산준비자산 등록전 자산초과 // -->
			<!--
			<div class="btn-area">
				<button type="button" class="btn-solid_sticky" data-action="goLiiv"><span>리브부동산에서 매물보기</span></button>
			</div>
			-->
			<!-- // 부동산준비자산 등록전 자산초과 -->
		</section>		

			</main>
			<!-- // app-content -->

		</div>
		<!-- // app-container -->

		<!-- Layer (fullpage popup, modal, bottom sheet) // -->
		<div class="layered">
		</div>
		<!-- // Layer (fullpage popup, modal, bottom sheet) -->
	</div>

	<!-- Script -->
	@@include('@@webRoot/html/_include/common-js.html')
	<!-- Add Library (this page only)-->
	<script src="@@webRoot/static/js/ui.js"></script>
	<!-- Add Script -->
	<script>
		$('button[data-action=kbSmartLoan]').on('click',function(){
            modalPopup({
                title: "",
                message: "상세보기 페이지로 이동하시겠습니까?",
                type: "confirm",
                textOkButton: "확인",
                textCancelButton: "취소",
                onOk: function() {
                    
                },
                onCancel: function() {
                    
                }
            });
        });
		$('button[data-action=goLiiv]').on('click',function(){
            modalPopup({
                title: "",
                message: "리브부동산으로 이동하시겠습니까?",
                type: "confirm",
                textOkButton: "확인",
                textCancelButton: "취소",
                onOk: function() {
                    
                },
                onCancel: function() {
                    
                }
            });
        });
		function maxRegistration(){
			modalPopup({
                title: "",
                message: "부동산 등록은 <br>최대 10개까지만 가능합니다.",
                type: "alert"
            });
		}

		//최초 선택되는 내용을 바꾸고 싶으면... (ui.js)
        gfn_gnb.select(4,1);
		

		//애니메이션을 위한 엘리먼트 : 무조건 실행
		$('.my-asset.wish-house-planer .progress-wrap .animation').addClass('is-active');
				
		// 백분율에 맞춰 setTimeOut 속도조절 공식 : (left + width) * 20 , 대출은 2000 고정 
		setTimeout(function(){
			$('.my-asset.wish-house-planer .progress-wrap .my-house').addClass('is-active');
		}, 400); //My House 자산
		setTimeout(function(){
			$('.my-asset.wish-house-planer .progress-wrap .my-cash').addClass('is-active');
		}, 1000); //My House 준비자산
		setTimeout(function(){
			$('.my-asset.wish-house-planer .progress-wrap .wish-house').addClass('is-active');
		}, 1400); //Wish House KB시세
		setTimeout(function(){
			$('.my-asset.wish-house-planer .progress-wrap .my-loan').addClass('is-active');
		}, 2000); //My House 대출
			
		
		
	
			
		
		
	
	</script>
</body>

</html>